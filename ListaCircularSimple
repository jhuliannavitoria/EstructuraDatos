public class Pasanaku {
	static class Nodo {
        String nombre;
        int cuota;
        Nodo siguiente;

        public Nodo(String nombre, int cuota) {
            this.nombre = nombre;
            this.cuota = cuota;
            this.siguiente = null;
        }
    }

    static class ListaCircular {
        Nodo primero;

        public ListaCircular() {
            this.primero = null;
        }

        public void agregarPersona(String nombre, int cuota) {
            Nodo nuevo = new Nodo(nombre, cuota);
            if (primero == null) {
                nuevo.siguiente = nuevo; // Si la lista está vacía, el nodo se enlaza a sí mismo
                primero = nuevo;
            } else {
                Nodo actual = primero;
                while (actual.siguiente != primero) {
                    actual = actual.siguiente;
                }
                actual.siguiente = nuevo;
                nuevo.siguiente = primero; // Cerramos el círculo enlazando el nuevo nodo al primero
            }
        }

        public void jugarPasanaku() {
            if (primero == null) {
                System.out.println("No hay personas en el juego.");
                return;
            }

            Nodo actual = primero;
            int mesActual = 1; // Contador de meses

            do {
                System.out.println(actual.nombre + " cobró " + actual.cuota + " Bs el 17/ " + mesActual+"/2022");
                mesActual++;
                actual = actual.siguiente;
            } while (actual != primero);
        }
    }

    public static void main(String[] args) {
        ListaCircular lista = new ListaCircular();
        int cuota=100; //valor fijo
        lista.agregarPersona("Persona 1", cuota);
        lista.agregarPersona("Persona 2", cuota);
        lista.agregarPersona("Persona 3", cuota);
        lista.agregarPersona("Persona 4", cuota);
        lista.agregarPersona("Persona 5", cuota);
        lista.agregarPersona("Persona 6", cuota);
        lista.agregarPersona("Persona 7", cuota);
        lista.agregarPersona("Persona 8", cuota);
        lista.agregarPersona("Persona 9", cuota);
        lista.agregarPersona("Persona 10", cuota);
        lista.jugarPasanaku();
    }
    
}
